<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemGym"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#193045"

    >


    <ImageView
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:id="@+id/idImageGym"
        android:layout_width="353dp"
        android:layout_height="156dp"
        app:srcCompat="@android:drawable/ic_menu_delete"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="109dp"
        android:layout_gravity="center"/>


    <TextView

        android:layout_marginTop="20dp"
        android:background="#11CD37"
        android:textColor="#000000"
        android:id="@+id/idNombreGym"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:text="Nombre Gimnasio"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="40dp"
        android:layout_gravity="center" />

    <TextView
        android:layout_marginTop="20dp"
        android:background="#11CD37"
        android:id="@+id/idPlan1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="TextView"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="301dp"
        android:layout_gravity="center"
        android:textColor="#000000"/>

    <TextView

        android:layout_marginTop="20dp"
        android:background="#11CD37"
        android:textAlignment="center"
        android:id="@+id/idPlan2"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="395dp"
        android:layout_gravity="center"
        android:textColor="#000000"/>

    <TextView

        android:layout_marginTop="20dp"
        android:background="#11CD37"
        android:textAlignment="center"
        android:id="@+id/idPlan3"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="488dp"
        android:layout_gravity="center"
        android:textColor="#000000"/>
</LinearLayout>